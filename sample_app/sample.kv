<RootWidget>:
	orientation: "vertical"
	image_widget: image_widget
	ImageWidget:
		id: image_widget
    Button:
        size_hint_y: 0.1
		id: prettify_button
        text: "Prettify"
		on_press: root.prettify_img()

<ImageWidget>:
	canvas.before:
        Color:
            rgba: 1, 1, 1, 0.5
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
	size_hint_y: 0.4
	img: image
	Image:
		allow_stretch: True
		id: image
